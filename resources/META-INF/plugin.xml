<idea-plugin version="2">
  <id>com.sdarioo.bddviewer</id>
  <name>BDD Viewer</name>
  <version>1.0</version>
  <vendor email="sdarioo@github.com" url="http://www.yourcompany.com">YourCompany</vendor>

  <description><![CDATA[
      Enter short description for your plugin here.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

  <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="145.0"/>

  <application-components>
    <component>
      <interface-class>com.intellij.openapi.components.ApplicationComponent</interface-class>
      <implementation-class>com.sdarioo.bddviewer.Plugin</implementation-class>
    </component>
  </application-components>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <toolWindow id="BDD"
                anchor="bottom"
                icon="/images/bdd.gif"
                factoryClass="com.sdarioo.bddviewer.ui.BddToolWindowFactory"
    />
  </extensions>

  <actions>
    <!-- Add your actions here -->
  </actions>

</idea-plugin>
